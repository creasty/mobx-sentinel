{
  "private": true,
  "name": "form-model",
  "version": "0.0.1",
  "author": "creasty <yuki@creasty.com>",
  "license": "MIT",
  "packageManager": "pnpm@8.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "simple-git-hooks",
    "dev": "turbo watch build",
    "build": "turbo run build",
    "doc": "typedoc",
    "test": "turbo run test",
    "lint": "run-p -lc --aggregate-output 'lint:*'",
    "lint:eslint": "eslint --color --cache './**/*.{ts,tsx,mts,mjs}'",
    "lint:prettier": "prettier --color --check './**/*.{ts,tsx,mts,mjs,json}'",
    "format": "run-s 'format:*'",
    "format:eslint": "pnpm lint:eslint --fix",
    "format:prettier": "pnpm lint:prettier --write"
  },
  "lint-staged": {
    "*.{ts,tsx,mts,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.17.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-mobx": "^0.0.13",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "lint-staged": "^15.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "simple-git-hooks": "^2.11.1",
    "turbo": "^2.3.3",
    "typedoc": "^0.27.6",
    "typescript-eslint": "^8.19.1"
  }
}
